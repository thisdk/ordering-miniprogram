<view class="container">

    <view class="user-container flex-column flex-center">

        <van-image round lazy-load
                   use-loading-slot
                   fit="cover"
                   width="128rpx"
                   height="128rpx"
                   src="{{ user.avatarUrl }}">

            <van-loading slot="loading" type="spinner" size="20" vertical/>

        </van-image>

        <text style="color: #aaa; margin-top: 20rpx;">{{ user.nickName }}</text>

    </view>

</view>
